<h2>Sign Up</h2>

<form action="/signup" method="POST">
  <p>Name: <input type="text" name="username" id="username">
    <div class="flash">
      <% if flash.has?(:message) %>
        <%= flash[:message] %>
      <% end %>
    </div>
  </p>
  <p>Password: <input type="password" name="password" id="password"></p>
  <input type="submit" value="Submit">
</form>
